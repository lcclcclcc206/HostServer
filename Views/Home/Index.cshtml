@using HostServer.Models;
@{
    ViewData["Title"] = "主页";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="row mt-4 justify-content-center">
    <div class="col-6 text-center">
        <h2 class="mb-3">文件目录</h2>

        <div class="list-group">
            @foreach (var provider in HostConfiguration.UniversalFileProviderList!)
            {

                <a href="@provider.RequestPath" class="list-group-item list-group-item-primary list-group-item-action">@provider.DisplayName</a>
            }
        </div>

    </div>
</div>

